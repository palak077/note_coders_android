<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/primaryColor</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="EditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="backgroundTint">@color/white</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxCornerRadiusTopStart">6dp</item>
        <item name="boxCornerRadiusTopEnd">6dp</item>
        <item name="boxCornerRadiusBottomStart">6dp</item>
        <item name="boxCornerRadiusBottomEnd">6dp</item>
        <item name="hintTextColor">@color/darkGrey</item>
        <item name="android:textColorHint">@color/darkGrey</item>
        <item name="errorIconDrawable">@drawable/error_icon</item>
        <item name="errorIconTint">@color/blue</item>
        <item name="errorTextColor">@color/blue</item>
        <item name="startIconTint">@color/primaryColor</item>
    </style>

    <style name="MaterialFilledButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/blue</item>
        <item name="cornerRadius">6dp</item>
        <item name="android:textSize">18sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="MaterialOutlineButton" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="cornerRadius">36dp</item>
        <item name="drawableTint">@color/blue</item>
        <item name="iconTint">@color/blue</item>
        <item name="strokeColor">@color/blue</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">true</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>